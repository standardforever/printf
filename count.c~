#include "main.h"

void _count(const char *fst, va_list args)
{
	int state = 0;

	while (*fst)
	{
		if (state == 0)
		{
			if (*fst == '%')
			{
				state = 1;
			}
			else
			{
				putchar(*fst);
			}
		}
		else if (state == 1)
		{
			switch (*fst)
			{
			case 'c':
			{
				char ch = va_arg(args, int);
				putchar(ch);
				break;
			}
			case 's':
			{
				/*const char *s = va_arg(args, const char *);
				while (*s){
					putchar(*s++);
				}*/
				break;
			}
			}
		}
		*fst++;
	}
}
